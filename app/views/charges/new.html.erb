<%= form_tag charges_path do %>
  <article>
     <% if flash[:error].present? %>
       <div id="error_explanation">
         <p><%= flash[:error] %></p>
       </div>
    <% end %>
    <label class="amount">
      <span>Amount: $<%= @total %>.00</span>
    </label>
 </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Payment for Hours"
          data-amount="<%= @total_in_cents %>"
          data-image="http://teamcarer.herokuapp.com/assets/logo-icon-308a5f9b114b4ff08f5aaa0f0055f77483fbc3fb3ae97193ed2329f638622785.png"
          data-locale="auto"></script>
<% end %>
