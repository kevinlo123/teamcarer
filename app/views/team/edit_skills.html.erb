               <% end %>
            </div>
         </div>
      </div>
      <div class="language-wrapper">
         <h3 class="conditions-container__companion--text">I am fluent in the following languages. Please check ALL that apply.</h3>
         <div class="language-container" >
            <%= label_tag :English, nil, :class => "conditions-container__personal--label" do %>
               <%= check_box_tag "languages[]", "English", false, class: "conditions-container__personal--checkbox" %>
               English
            <% end %>
            <%= label_tag :Spanish, nil, :class => "conditions-container__personal--label" do %>
               <%= check_box_tag "languages[]", "Spanish", false, class: "conditions-container__personal--checkbox" %>
