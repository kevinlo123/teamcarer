<div class="signup-container-cg">
   <h2 class="signup-container__signup-text">Edit Skills</h2>
   <%= form_for :team, url: 'edit_skills_update',  html: {class: "nifty_form"} do |f| %>
      <div class="conditions-cg">
         <div class="conditions-container">
            <div class="conditions-container__companion">
               <h3 class="conditions-container__companion--text">Companion Care</h3>
               <%= label_tag :HouseCleaning, nil, :class => "conditions-container__companion--label" do %>
