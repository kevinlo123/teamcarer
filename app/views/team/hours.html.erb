      <thead>
         <tr>
            <th class="hours-block" style="border-bottom: none;">Date</th> 
            <th class="hours-block" style="border-right: none; border-left: none; border-bottom: none;">Companion Care</th>      
            <th class="hours-block" style="border-bottom: none;">Personal Care</th>
         </tr>
      </thead> 
      <tbody>
         <tr>
            <td class="hours-block data" scope="row"><%= f.date_field :day_worked, required: true, placeholder: "Enter Todays Date", class: "signup-input-container-cg--input-cg"  %></td> 
            <td class="hours-block data" style="border-right: none; border-left: none;"><%= f.text_field :companion_hours, required: true, maxlength: 2, placeholder: "Hours worked", class: "signup-input-container-cg--input-cg"  %></td>      
            <td class="hours-block data"><%= f.text_field :personal_hours, required: true, maxlength: 2, placeholder: "Hours worked", class: "signup-input-container-cg--input-cg" %></td>      
         </tr>  
      </tbody>
   </table>
