<div class="login-container">
   <%= image_tag "logo-icon.png", class: "login-container__logo" %>
   <h2 class="login-container__log-in-text">Forgot your password?</h2>
   <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="email-password">
         <%= devise_error_messages! %>
         <div class="field email-password__email">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "email-password__input" %>
         </div>
         <%= render "care_givers/shared/links" %>
         <div class="actions">
            <%= f.submit "Send reset password instructions", class: "email-password__submit" %>
         </div>
      </div>
   <% end %>
</div>
