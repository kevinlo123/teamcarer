<div class="signup-container-cg">
   <%= image_tag "logo-icon.png", class: "login-container__logo" %>
   <h2 class="signup-container__signup-text">Sign up</h2>
   <div class="progress-bar-container-cg">
      <div class="box progress-bar-cg" data-module="progressbar">
         <ol>
            <li class="current-cg qa-progressbar-item-cg">
               <span class="cell-cg">
                  <span class="item-cg">
                     <span>Care Giver info</span>
                  </span>
               </span>
            </li>
            <li class="qa-progressbar-item-cg">
               <span class="cell-cg">
                  <span class="item-cg">
                     <span>Care Giver Skills</span>
                  </span>
               </span>
            </li>
            <li class="qa-progressbar-item-cg">
               <span class="cell-cg">
                  <span class="item-cg">
                     <span>Disease Management</span>
                  </span>
               </span>
            </li>
            <li class="qa-progressbar-item-cg">
               <span class="cell-cg">
                  <span class="item-cg">
                     <span>Questionnaire</span>
                  </span>
               </span>
            </li>
            <li class="last qa-progressbar-item-cg">
               <span class="cell-cg">
                  <span class="item-cg">
                     <span>Experience/Statement</span>
                  </span>
               </span>
            </li>
         </ol>
      </div>
   </div>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="signup-input-container-cg">
         <%= devise_error_messages! %>
         <h2 class="signup-input-container__text">Step 1. Care Giver Info</h2>
         <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail", autocomplete: "email", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <!--<% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />-->
            <%= f.password_field :password,  placeholder: "Password", autocomplete: "password", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "confirm password", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.text_field :firstname, autofocus: true, placeholder: "First Name", autocomplete: "firstname", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.text_field :middlename, autofocus: true, placeholder: "Middle Name", autocomplete: "middlename", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.text_field :lastname, autofocus: true, placeholder: "Last Name", autocomplete: "last name", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.telephone_field :phone, autofocus: true, maxlength: 10, placeholder: "Phone Number", autocomplete: "phone number", class: "signup-input-container-cg--input-cg number-field" %>
         </div>
         <div class="field">
            <%= f.select :state, options_for_select(CS.states(:us).map { |code, name| [name, code] }),{:prompt => "State"}, {:class => "signup-input-container-cg--input-cg", :id => "state-picker", :required => true } %>
         </div>
         <div class="field">
            <%= f.select :city, options_for_select([]),{:prompt => "City"}, {:class => "signup-input-container-cg--input-cg", :id => "city-picker", :required => true } %> 
         </div>
         <div class="field">
            <%= f.text_field :street, autofocus: true, placeholder: "Street", autocomplete: "street", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.text_field :zip, maxlength: 5, autofocus: true, placeholder: "Zip code", autocomplete: "zip code", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.text_field :emergency_contact, autofocus: true, placeholder: "Emergency Contact Name", autocomplete: "Emergency Contact Name", class: "signup-input-container-cg--input-cg" %>
         </div>
         <div class="field">
            <%= f.telephone_field :emergency_number, maxlength: 11, autofocus: true, placeholder: "Emergency Contact Number", autocomplete: "Emergency Contact Number", class: "signup-input-container-cg--input-cg number-field" %>
         </div>
         <%= recaptcha_tags %>
         <div class="actions">
            <%= f.submit "Next Step", class: "signup-input-container-cg--submit-cg" %>
         </div>
         <p style="color: #133A6B">By signing in, you agree to our Terms of Service and Privacy Policy.</p>
      </div>
   <% end %>
</div>
