<div class="home-teamsearch-container">
   <div class="home-teamsearch-container__care-text">
      <h3  class="home-teamsearch-container__care-text--text">Do you want to find a Care team?</h3>
   </div>
   <%= form_tag search_team_results_path, :method => 'get' do %>
      <div class="teamsearch-name">
         <div class="teamsearch-name__inputs">
            <%= text_field_tag :search, params[:search], placeholder: "Search Teams By name", required: true, class: "teamsearch-name__inputs--input" %>
            <%= submit_tag "Search", :name => nil, class: "teamsearch-name__inputs--button" %>
         </div>
      </div>
   <% end %>
   <p class="location-text">Or By Location</p>
   <%= form_tag search_team_results_city_path, :method => 'get' do %>
      <div class="teamsearch-name">
         <div class="teamsearch-name__inputs">
            <div style="width: 65%;">
               <%= text_field_tag :city, params[:city], placeholder: "Search Teams By city", required: true, class: "teamsearch-name__inputs--input" %>
            </div>
            <div style="width: 65%;">
               <%= select_tag :state, options_for_select(CS.states(:us).map { |code, name| [name, code] }), {:id => "state-picker", :required => true, :prompt => "State", :class => "teamsearch-name__inputs--input", :style => "height: 100%;" } %>
            </div>
            <%= submit_tag "Search", :name => nil, class: "teamsearch-name__inputs--button"  %>
         </div>
      </div>
   <% end %>
</div>
