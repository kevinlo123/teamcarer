<% if !current_family.job_post %>
   <div class="home-jobpost-container">
      <div class="home-jobpost-container__create">
         <h3 class="home-jobpost-container__create--text">Do You Want to Create a Job Post?</h3>
      </div>
      <div class="home-jobpost-container__changes">
         <h3 class="home-jobpost-container__changes--text">You can make changes after you post. Only items flagged with an asterick will be posted, and only registered care teams can see the post.</h3>
      </div>
      <%= form_for  :jobpost , url: "family/create_post" do |f| %>
         <div class="home-jobpost-container__form-input">
            <%= f.label :title, 'Give a title to your Job Post'%>
            <%= f.text_field :title, required: true, placeholder: "Title", class: "home-jobpost-container__form-input--input" %>
         </div>
         <%= f.submit "Next", class: "home-jobpost-container__button" %>
      <% end %>
   </div>
<% else %>
   <div class="home-family-member">
      <div class="home-family-member__text-container">
         <h2 class="home-family-member__text-container--text">Family Member</h2>
      </div>
      <div class="data-container">
         <div class="data-container__left">
            <div>
               <p class="data-container__left--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">First Name:</p> 
               <p class="data-container__left--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.firstname %></p>
            </div>
            <div>
               <p class="data-container__left--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">Last Name:</p>
               <p class="data-container__left--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.lastname %></p>
            </div>
            <div>
               <p class="data-container__left--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">E-mail:</p>
               <p class="data-container__left--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.email %></p>
            </div>
            <div>
               <p class="data-container__left--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">Phone:</p>
               <p class="data-container__left--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.phone %></p>
            </div>
         </div>
         <div class="data-container__right">
            <div>
               <p class="data-container__right--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">City:</p> 
               <p class="data-container__right--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.city %></p>
            </div>
            <div>
               <p class="data-container__right--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">State:</p>
               <p class="data-container__right--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.state %></p>
            </div>
            <div>
               <p class="data-container__right--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">Address:</p>
               <p class="data-container__right--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.street %></p>
            </div>
            <div>
               <p class="data-container__right--text" style="display: inline; font-size: 1.3rem; font-weight: bold;">Zipcode:</p>
               <p class="data-container__right--text" style="display: inline-block; margin-top: 2rem; margin-bottom: 0;"><%= current_family.zip %></p>
            </div>
         </div>
      </div>
      <%= link_to "Update", "families/edit", class: "home-jobpost-container__button", style: "text-decoration: none; text-align: center;"%>
   </div>
<% end %>
