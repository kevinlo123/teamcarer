   <%= check_box_tag  "conditions[]", 'Psychiatric disorders' %><%= label_tag :Psychiatric, 'Psychiatric disorders' %><br>
   <%= check_box_tag  "conditions[]", 'Other' %><%= label_tag :other, 'Other' %><br>
