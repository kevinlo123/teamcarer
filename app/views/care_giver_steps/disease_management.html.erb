<h1>Condition Management</h1>
<%= form_for :team, url: 'disease_management',  html: {class: "nifty_form"} do |f| %>
   <%= check_box_tag  "conditions[]", 'Memory impairment / Dementia' %><%= label_tag :Memory, 'Memory impairment / Dementia' %><br>
   <%= check_box_tag  "conditions[]", 'Congestive heart failure' %><%= label_tag :HeartFailure, 'Congestive heart failure' %><br>
   <%= check_box_tag  "conditions[]", 'Diabetes' %><%= label_tag :Diabetes %><br>
   <%= check_box_tag  "conditions[]", 'End stage renal disease' %><%= label_tag :EndStage, 'End stage renal disease' %><br>
   <%= check_box_tag  "conditions[]", 'Failure to thrive' %><%= label_tag :Thrive, 'Failure to thrive' %><br>
   <%= check_box_tag  "conditions[]", 'Fall risk' %><%= label_tag :Risk, 'Fall risk' %><br>
   <h3>Other Conditions</h3>
   <%= check_box_tag  "conditions[]", 'Cancer' %><%= label_tag :Cancer %><br>
   <%= check_box_tag  "conditions[]", 'Chronic Obstructive Pulmonary disease' %><%= label_tag :Chronic, 'Chronic Obstructive Pulmonary disease' %><br>
