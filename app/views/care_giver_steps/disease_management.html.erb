   <%= check_box_tag  "related_service[]", 'Home Health Care' %><%= label_tag :Care, 'Home Health Care' %><br>
   <%= check_box_tag  "related_service[]", 'Palliative Care' %><%= label_tag :Palliative, 'Palliative Care' %><br>
   <%= check_box_tag  "related_service[]", 'Hospice Care' %><%= label_tag :Hospice, 'Hospice Care' %><br>
   <%= check_box_tag  "related_service[]", 'Post surgery recovery' %><%= label_tag :Surgery, 'Post surgery recovery' %><br>
   <%= check_box_tag  "related_service[]", 'Other' %><%= label_tag :other, 'Other' %><br>
   <%= f.submit%>
<% end %>

 
